{
  "name": "transitland-atlas-vscode-extension",
  "displayName": "Transitland Atlas DMFR",
  "license": "GPL-3.0",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Snippets",
    "Linters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "transitland-atlas-vscode-extension.createNewDmfrFile",
        "title": "Create new DMFR file"
      },
      {
        "command": "transitland-atlas-vscode-extension.formatDmfrFile",
        "title": "Apply opinionated format to current DMFR file",
        "enablement": "editorLangId == json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}